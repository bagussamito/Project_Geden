<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudiKasus" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#866374</item>
        <item name="colorPrimaryVariant">@color/color_transparan</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#37474F</item>
        <item name="colorSecondaryVariant">#866374</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#866374</item>
        <!-- Customize your theme here. -->
        <item name="color">#866374</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/optionmenuu</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="optionmenuu" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>
    
    <style name="custom_fab">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/custom_fab</item>
    </style>

    <style name="Theme.StudiKasus.NoActionBar" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>